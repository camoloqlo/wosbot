<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Enable Bear Trap -->
      <CheckBox fx:id="checkBoxEnableBearTrap" mnemonicParsing="false" text="Enable Bear Trap">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </CheckBox>
      
      <Separator prefWidth="200.0" />
      
      <!-- Trap Schedule Section -->
      <Label text="Trap Schedule">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Next Bear Trap (UTC):" GridPane.rowIndex="0" />
            <TextField fx:id="textFieldScheduleDateTime" promptText="yyyy-MM-dd HH:mm" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label fx:id="labelDateTimeError" text="" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>

            <Label text="Preparation Time (minutes):" GridPane.rowIndex="2" />
            <TextField fx:id="textFieldPreparationTime" promptText="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      
      <Separator prefWidth="200.0" />
      
      <!-- Preparation Section -->
      <Label text="Preparation">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      
      <VBox spacing="8.0">
         <children>
            <CheckBox fx:id="checkBoxActivePets" mnemonicParsing="false" text="Active Pets" />
            <CheckBox fx:id="checkBoxRecallTroops" mnemonicParsing="false" text="Recall Gather Troops" />
         </children>
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </VBox>
      
      <Separator prefWidth="200.0" />
      
      <!-- Trap Configuration Section -->
      <Label text="Trap Configuration">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      
      <VBox spacing="10.0">
         <children>
            <!-- Trap Selection -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Trap:" />
                  <ComboBox fx:id="comboBoxTrapNumber" prefWidth="80.0" />
               </children>
            </HBox>
            
            <!-- Call Rally -->
            <VBox spacing="8.0">
               <children>
                  <CheckBox fx:id="checkBoxCallRally" mnemonicParsing="false" text="Call Own Rally" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Rally Flag:" />
                        <ComboBox fx:id="comboBoxRallyFlag" prefWidth="80.0" />
                     </children>
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Join Rally -->
            <VBox spacing="8.0">
               <children>
                  <CheckBox fx:id="checkBoxEnableJoin" mnemonicParsing="false" text="Enable Join" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Joiner Flag:" />
                        <ComboBox fx:id="comboBoxJoinFlag" prefWidth="80.0" />
                     </children>
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
